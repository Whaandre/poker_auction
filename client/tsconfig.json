{
  "compilerOptions": {
    "target": "ESNext",                   // modern JS output
    "module": "ESNext",                   // module system (ESM)
    "lib": ["DOM", "ESNext"],             // include DOM types
    "jsx": "react-jsx",                   // React 17+ JSX transform
    "strict": true,                       // enable all strict checks
    "esModuleInterop": true,              // for imports like `import fs from 'fs'`
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "isolatedModules": true,              // required by Vite
    "noEmit": true                        // donâ€™t output compiled files (Vite handles this)
  },
  "include": ["src"],                     // include all TS/TSX files in src
  "exclude": ["node_modules", "dist"]     // ignore node_modules and build output
}
